{% extends 'base.html.twig' %}

{% block title %}Liste des users{% endblock %}

{% block body %}
    <h1>Liste des users</h1>
    <table>
        <thead>
            <th>ID</th>
            <th>Email</th>
            <th>Rôles</th>
          
            <th>Actions</th>
        </thead>
        <tbody>
            {# On boucle sur les users #}
            {% for user in user %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        {# On boucle sur les rôles #}
                        {% for role in user.roles %}
                            {% if role == "ROLE_USER" %}
                                User
                            {% elseif role == "ROLE_EDITOR" %}
                                Editeur
                            {% elseif role == "ROLE_ADMIN" %}
                                Administrateur
                            {% endif %}
                        {% endfor %}
                    </td>
                
                    <td><a href="{{ path('admin_modifier_user', {'id': user.id}) }}">Modifier</a></td>
                </tr>
                
            {% else %}
                <p>Aucun user inscrit</p>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}